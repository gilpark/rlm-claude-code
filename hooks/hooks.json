{
  "description": "RLM plugin hooks - simplified for hybrid architecture",
  "hooks": {
    "SessionStart": [
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/scripts/hooks/init_rlm.sh",
            "timeout": 5000,
            "description": "Initialize RLM environment and load config"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/scripts/hooks/check_complexity.sh",
            "timeout": 3000,
            "description": "Check if RLM should activate based on task complexity"
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/scripts/hooks/externalize_context.sh",
            "timeout": 10000,
            "description": "Externalize context before compaction"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/scripts/hooks/save_trajectory.sh",
            "timeout": 5000,
            "description": "Save RLM trajectory on session end"
          }
        ]
      }
    ]
  }
}
