{
  "name": "rlm-claude-code",
  "version": "0.7.1",
  "description": "Transform Claude Code into a Recursive Language Model (RLM) agent with intelligent orchestration, unbounded context handling, persistent memory, and REPL-based decomposition.",
  "main": "index.js",
  "scripts": {
    "postinstall": "npm run ensure-setup",
    "ensure-setup": "npx ts-node scripts/npm/ensure-setup.ts",
    "build": "npx ts-node scripts/npm/build.ts --all",
    "rebuild": "npm run clean && npm run build",
    "verify": "npx ts-node scripts/npm/verify.ts",
    "test": "npx ts-node scripts/npm/test.ts",
    "test:full": "npx ts-node scripts/npm/test.ts --full",
    "clean": "npx ts-node scripts/npm/clean.ts",
    "test:npm": "node --test --import tsx scripts/npm/__tests__/*.test.ts"
  },
  "keywords": [
    "claude",
    "claude-code",
    "rlm",
    "recursive-language-model",
    "ai",
    "llm",
    "orchestration",
    "context-management"
  ],
  "author": "rand",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/rand/rlm-claude-code.git"
  },
  "bugs": {
    "url": "https://github.com/rand/rlm-claude-code/issues"
  },
  "homepage": "https://github.com/rand/rlm-claude-code#readme",
  "engines": {
    "node": ">=20.0.0"
  },
  "files": [
    "src/",
    "bin/",
    "hooks/",
    "commands/",
    "skills/",
    "scripts/",
    "pyproject.toml",
    "uv.lock",
    "README.md",
    "LICENSE",
    "*.whl"
  ],
  "devDependencies": {
    "@types/node": "^20.10.0",
    "tar": "^7.5.7",
    "ts-node": "^10.9.0",
    "tsx": "^4.21.0",
    "typescript": "^5.3.0"
  }
}
